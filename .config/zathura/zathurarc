# 
# ~/.config/zathura/zathurarc
#

set selection-clipboard clipboard

map r reload
map p print
map i recolor
map J zoom out
map K zoom in
map R rotate

# Open document in fit-width mode by default
set adjust-open "best-fit"

# One page per row by default
set pages-per-row 1

# Stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

# Zoom settings
set zoom-min 10
set guioptions ""

set font "DepartureMono Nerd Font 14"

set default-bg                  "#35474b"
set default-fg                  "#d5d4c0"

set statusbar-fg                "#d5d4c0"
set statusbar-bg                "#45575b"

set inputbar-bg                 "#45575b"
set inputbar-fg                 "#d5d4c0"

set notification-bg             "#d5d4c0"
set notification-fg             "#45575b"

set notification-error-bg       "#bb888c"
set notification-error-fg       "#45575b"

set notification-warning-bg     "#d5d4c0"
set notification-warning-fg     "#45575b"

set highlight-color             "#74888c"
set highlight-fg                "#d5d4c0"
set highlight-active-color      "#aab8b4"

set completion-bg               "#6e6a86"
set completion-fg               "#bb888c"

set completion-highlight-fg     "#74888c"
set completion-highlight-bg     "#bb888c"

set recolor-lightcolor          "#35474b"
set recolor-darkcolor           "#d5d4c0"

set recolor                     "true"
# set recolor-keephue             "true"
set recolor-reverse-video       "true"
