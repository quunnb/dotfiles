floating_maximum_size 1900 x 1000


######################################
# color settings for bar and windows #
######################################

set_from_resource $black   i3wm.color0  #222222
set_from_resource $red     i3wm.color1  #BB888C
set_from_resource $green   i3wm.color2  #74888C
set_from_resource $magenta i3wm.color5  #45575B
set_from_resource $cyan    i3wm.color6  #74888C
set_from_resource $white   i3wm.color7  #45575B
set_from_resource $green2  i3wm.color10 #D5D4C0
set_from_resource $white2  i3wm.color15 #D5D4C0

# define colors for windows:
# class                 border     bg     text    indicator child_border
client.focused          #00000000  $black $white  #CC888C   #CC888C
client.unfocused        #00000000  $black $white  #D5D4C000 #D5D4C000
client.focused_inactive #00000000  $black $white2 #D5D4C000 #D5D4C000
client.urgent           #00000000  $black $black  $red      $red

############################################
# bar settings (input comes from i3blocks) #
############################################

# Start i3bar to display a workspace bar
# (plus the system information i3status finds out, if available)
bar {
    font pango: DepartureMono Nerd Font 14
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    position top
    #tray_output primary
    tray_padding 4

    # When strip_workspace_numbers is set to yes,
    # any workspace that has a name of the form
    # “[n][:][NAME]” will display only the name.
    strip_workspace_numbers yes
    # strip_workspace_name no

    colors {
        separator          #D5D4C0
        background         #45575B
        statusline         #D5D4C0

#                           border  bg      txt     indicator
        focused_workspace   #45575B #45575B #D5D4C0 #BB888C
        active_workspace    #45575B #45575B #dddddd #BB888C
        inactive_workspace  #45575B #45575B #aaaaaa #BB888C
        urgent_workspace    #45575B #45575B #BB888C #BB888C
    }
}


