############################################
# bar settings (input comes from i3blocks) #
############################################

# Start i3bar to display a workspace bar
# (plus the system information i3status finds out, if available)
bar {
    # font pango: ShureTechMono Nerd Font 14
    # font pango: CozetteVector 16
    # font pango: Monaspace Krypton 16
    # font pango: Monaspace Krypton ExtraLight 16
    # font pango: Monaspace Neon Light 16
    font pango: InconsolataGo Nerd Font Mono 16
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    position top
    #tray_output primary
    tray_padding 0

    # When strip_workspace_numbers is set to yes,
    # any workspace that has a name of the form
    # “[n][:][NAME]” will display only the name.
    strip_workspace_numbers yes
    # strip_workspace_name no

    colors {
        separator          #c4a7e7
        background         #191724
        statusline         #e0def4

#                           border  bg      txt     indicator
        focused_workspace   #191724 #191724 #9ccfd8 #c4a7e7
        active_workspace    #191724 #191724 #ebbcba #c4a7e7
        inactive_workspace  #191724 #191724 #908caa #c4a7e7
        urgent_workspace    #191724 #191724 #eb6f92 #c4a7e7
    }
}


